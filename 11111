openapi: 3.0.0
info:
  title: Swagger для Товара и отзывов
  description: Отзывы
  version: 1.0.0
# Определение объекта "Информация о товаре"
definitions:
  ProductInfo:
    type: object
    properties:
      product_id:
        type: string
        description: Уникальный идентификатор товара.
      product_name:
        type: string
        description: Название товара.
      product_description:
        type: string
        description: Описание товара.
      product_price:
        type: number
        description: Цена товара.
      product_reviews:
        type: array
        description: Список отзывов о товаре.
        items:
          $ref: '#/definitions/ProductReview'

# Определение объекта "Отзыв о товаре"
definitions:
  ProductReview:
    type: object
    properties:
      review_id:
        type: string
        description: Уникальный идентификатор отзыва.
      user_name:
        type: string
        description: Имя пользователя.
      rating:
        type: integer
        description: Оценка товара в звездах (целое число от 1 до 5).
      review_text:
        type: string
        description: Текст отзыва.
      review_date:
        type: string
        format: date
        description: Дата отзыва (в формате YYYY-MM-DD).
      review_images:
        type: array
        description: Ссылки на фотографии, прикрепленные к отзыву.
        items:
          type: string

# Определение метода "Получение информации о карточке товара с отзывами"
paths:
  /api/product/{product_id}:
    get:
      summary: Получение информации о карточке товара с отзывами
      description: Этот метод возвращает информацию о карточке товара вместе с отзывами, связанными с этим товаром.
      tags:
        - Товары
      parameters:
        - name: product_id
          in: path
          required: true
          description: Уникальный идентификатор товара.
          schema:
            type: string
      responses:
        '200':
          description: Успешно получена информация о товаре с отзывами.
          content:
            application/json:
              schema:
                $ref: '#/definitions/ProductInfo'
        '404':
          description: Товар с указанным идентификатором не найден.

# Определение метода "Получение всех отзывов"
paths:
  /api/reviews/all:
    get:
      summary: Получение всех отзывов
      description: Этот метод возвращает список всех отзывов, оставленных пользователями.
      tags:
        - Отзывы
      responses:
        '200':
          description: Успешно получены все отзывы.
          content:
            application/json:
              schema:
                type: object
                properties:
                  reviews:
                    type: array
                    description: Список всех отзывов.
                    items:
                      $ref: '#/definitions/ProductReview'
